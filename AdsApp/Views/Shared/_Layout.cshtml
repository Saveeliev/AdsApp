<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AdsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>

        @if (IsSectionDefined("Header"))
        {
            @RenderSection("Header")
        }
        else
        {
            <div class="header">

                <div class="header-left">

                    <div>
                        <a class="linkToHomePage" href="/Ads">Home</a>
                    </div>

                    <div>
                        <a href="/Ads/Addadvertisement">Add advertisement</a>
                    </div>

                </div>

                <div class="header-right">

                    <form class="logOutForm" method="post" asp-controller="User" asp-action="Logout">
                        <input class="enter" type="submit" value="Log out" />
                    </form>

                </div>
            </div>
        }

    </header>

    <div>
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>